import java.io.*;
import java.util.*;
class Main{
    public static void main(String args[]){
        int a = 5, b = 0, c;
       
        if (b != 0) {
            c = a / b;
            System.out.println("Value of c is " + c);
        } else {
            System.out.println("Division by zero is not allowed.");
        }
    }
}
